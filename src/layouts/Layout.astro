---
import "./src/styles/global.css";
import '@fontsource-variable/plus-jakarta-sans';

interface Props {
  title?: string;
}

const { title = "Balance App" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Balance App - Manage your finances" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body
    class="relative bg-[#000033] border-tertiary mx-auto min-h-screen max-w-md overflow-x-hidden rounded-2xl border-1
    shadow-2xl shadow-tertiary"
  >
    <slot />
  </body>
</html>
